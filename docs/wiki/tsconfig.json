{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["es6", "dom", "es5"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src/**/*", "./typings/**/*"]
}
